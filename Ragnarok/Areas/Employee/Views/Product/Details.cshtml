@model ProductFormViewModel
@{
    ViewData["Title"] = "Details";

    List<int> cat = new List<int>();

    foreach (var item in Model.Product.CategoryProduct)
    {
        cat.Add(item.CategoryId);
    }

    if (cat.Count == 0)
    {
        cat = Model.categoryList;
    }
}


<div class="container-fluid primary-content">
    <!-- PRIMARY CONTENT HEADING -->
    <div class="primary-content-heading clearfix">
        <h2>PRODUTOS</h2>
        <ul class="breadcrumb pull-left">
            <li><i class="icon ion-home"></i><a asp-action="Index" asp-controller="Home" asp-area="Employee">Home</a></li>
            <li><a asp-action="Index" asp-controller="Product" asp-area="Employee">Categorias</a></li>
            <li><a asp-action="Insert" asp-controller="Product" asp-area="Employee">Novo Produto</a></li>
        </ul>
        <div class="sticky-content pull-right">
            <a asp-action="Insert" asp-controller="Product" asp-area="Employee" type="button" class="btn btn-default btn-sm btn-quick-task"><i class="icon ion-person-add"></i> Nova Produto</a>
            <div class="btn-group btn-dropdown">
                <button type="button" class="btn btn-default btn-sm btn-favorites" data-toggle="dropdown"><i class="icon ion-android-star"></i> Favorites</button>
                <ul class="dropdown-menu dropdown-menu-right list-inline">
                    <li><a href="#"><i class="icon ion-pie-graph"></i> <span>Statistics</span></a></li>
                    <li><a href="#"><i class="icon ion-email"></i> <span>Inbox</span></a></li>
                    <li><a href="#"><i class="icon ion-chatboxes"></i> <span>Chat</span></a></li>
                    <li><a href="#"><i class="icon ion-help-circled"></i> <span>Help</span></a></li>
                    <li><a href="#"><i class="icon ion-gear-a"></i> <span>Settings</span></a></li>
                    <li><a href="#"><i class="icon ion-help-buoy"></i> <span>Support</span></a></li>
                </ul>
            </div>
        </div>
    </div>
    @if (TempData["MSG_S"] != null)
    {
        <div class="alert alert-success fade in">
            <button class="close" data-dismiss="alert">&times;</button>
            <i class="icon ion-checkmark-circled"></i>
            <strong>Feito!</strong> @TempData["MSG_S"]
        </div>
    }
    @if (TempData["MSG_E"] != null)
    {
        <div class="alert alert-danger fade in">
            <button class="close" data-dismiss="alert">&times;</button>
            <i class="icon ion-checkmark-circled"></i>
            <strong>Erro!</strong> @TempData["MSG_E"]
        </div>
    }
    <div class="widget">

        <div class="widget-header clearfix">
            <h3><i class="icon ion-ios-browsers"></i> <span>LISTA DE TODAS AS CATEGORIAS</span></h3>
        </div>
        <div class="widget-content">
            <ul class="nav nav-tabs tabs-iconized" role="tablist">
                <li class="active"><a href="#home" role="tab" data-toggle="tab"><i class="icon ion-home"></i> Principal</a></li>
            </ul>
            <div class="tab-content">

                <div class="tab-pane fade in active" id="home">
                    <h5>Tab Home</h5>
                    <form asp-action="Update" method="post">
                        <input asp-for="Product.Id" type="hidden" class="form-control" />
                        <input asp-for="Product.RegisterEmployeeId" type="hidden" class="form-control" />
                        <input asp-for="Product.InsertDate" type="hidden" class="form-control" />
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="Product.Name"> Produto</label>
                                <input asp-for="Product.Name" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Product.BarCode"> Código de Barras</label>
                                <input asp-for="Product.BarCode" class="form-control" />
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="Product.CategoryProduct"> Categoria</label>
                                <select multiple asp-for="@cat" name="categoryList" id="select2-multiple1" class="select2 select2-multiple" asp-items="@ViewBag.Category">
                                    <option value="">Selecione</option>
                                </select>
                            </div>

                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-success btn-sm btn-quick-task"><i class="icon"></i> Salvar</button>
                                <a asp-action="Index" asp-controller="Product" asp-area="Employee" type="button" class="btn btn-default btn-sm btn-quick-task"><i class="icon ion-arrow-return-left"></i> voltar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>